extends ../layout/common

block content
	h1.text-center.mt-3 Register
	if errors
		each error in errors
			.alert.alert-danger.alert-dismissible.w-50.m-auto
				a.close(href='#' data-dismiss='alert' aria-label='close') &times;
				strong= error		
	.d-flex.justify-content-center
		form.w-50(action='/register' method='POST')
			.form-group
				label.mr-3(for='email') Email:
				input#email.form-control.mr-3(type='text' name='email' value=values? values.email:'')
			.form-group
				label.mr-3(for='password') Password:
				input#password.form-control.mr-3(type='password' name='password') 
			button.btn.btn-primary.w-100 Register