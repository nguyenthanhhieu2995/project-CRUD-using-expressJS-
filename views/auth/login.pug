extends ../layout/common

block content
	h1.text-center.mt-3 Login
	if errors
		each error in errors
			.alert.alert-danger= error
	.d-flex.justify-content-center
		form.w-50(action='/auth/login' method='POST')
			.form-group
				label.mr-3(for='email') Email:
				input#email.form-control.mr-3(type='text' name='email' value=values? values.email:'')
			.form-group
				label.mr-3(for='password') Password:
				input#password.form-control.mr-3(type='password' name='password')
			.row
				.col
					button.btn.btn-primary.w-100 Login
				.col
					a.btn.btn-primary.w-100(href='/register') Register