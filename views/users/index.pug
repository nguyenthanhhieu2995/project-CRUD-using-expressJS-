extends ../layout/common

block content
	h1 Users
	nav.navbar
		a.btn.btn-primary.mb-3.navbar-brand(href='/users/create') New
		//- click vao đây kích hoạt dòng app.get(/users/create)
		form.form-inline(action='/users/search' method='GET')
			input.form-control.mr-3(type="text" name= "q" value= q )
			button.btn.btn-primary Search
		//- click vào nút search sẽ kích hoạt dòng app.get(/users/search)
	table.table.text-center
		thead
			th Index
			th Name
			th Phone number
			th Action
		tbody
			each user, index in users	
				tr
					td= index+1
					td= user.name
					td= user.phone 
					td
						a.btn.btn-info.mx-1(href= '/users/' + user.id ) View
						a.btn.btn-success.mx-1(href= '/users/edit/' + user.id ) Edit
						a.btn.btn-danger.mx-1(href= '/users/delete/' + user.id ) Delete	

			//- click vào đây thi vào app.get('/users/'user.id') hoặc vào rout parameters cái nào đứng trước thì vào trước
	
	include ../includes/paginate
	include ../includes/foot




