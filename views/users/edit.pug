extends ../layout/common

block content
	h1 Edit user
	if errors
		each error in errors
			.alert.alert-danger.alert-dismissible.w-50.m-auto
				a.close(href='#' data-dismiss='alert' aria-label='close') &times;
				strong= error
	.d-flex.justify-content-center
		form.w-50(action='/users/edit/'+values.id method='POST')
			.form-group
				label.mr-3(for='name') Name:
				input#name.form-control.mr-3(type='text' name='name' style="text-transform: capitalize" value=values? values.name:'')
			.form-group
				label.mr-3(for='num') Phone Number:
				input#num.form-control.mr-3(type='text' name='phone' value=values? values.phone:'')
			.text-center
				button.btn.btn-success.w-25 Edit
		//- click vào nút Create kích hoạt app.post('/users/create')
	include ../includes/foot